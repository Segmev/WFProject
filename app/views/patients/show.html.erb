<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-info">
    <div class="panel-heading">
      <p class="panel-title">
        <strong>Name</strong>
      </p>
    </div>
    <div class="panel-body">
      <div class="panel-text" style="text-align:justify"><%= @patient.name %></div>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <p class="panel-title">
        <strong>E-Mail</strong>
      </p>
    </div>
    <div class="panel-body">
      <div class="panel-text" style="text-align:justify"><%= @patient.email %></div>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <p class="panel-title">
        <strong>Phone</strong>
      </p>
    </div>
    <div class="panel-body">
      <div class="panel-text" style="text-align:justify"><%= @patient.phone %></div>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <p class="panel-title">
        <strong>Allergies</strong>
      </p>
    </div>
    <div class="panel-body">
      <div class="panel-text" style="text-align:justify"><%= @patient.allergies %></div>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <p class="panel-title">
        <strong>Medical notes</strong>
      </p>
    </div>
    <div class="panel-body">
      <div class="panel-text" style="text-align:justify"><%= @patient.medical_notes %></div>
    </div>
  </div>

  <br>
  <%= link_to 'Edit', edit_patient_path(@patient), :class => "btn btn-primary"  %>
  <%= link_to 'Back', patients_path, :class => "btn btn-primary"  %>
