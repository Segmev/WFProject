<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-info">
    <div class="panel-heading">
      <p class="panel-title">
        <strong>Title</strong>
      </p>
    </div>
    <div class="panel-body">
      <div class="panel-text" style="text-align:justify"><%= @news.title %></div>
    </div>
  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
      <p class="panel-title">
        <strong>Content</strong>
      </p>
    </div>
    <div class="panel-body">
      <div class="panel-text" style="text-align:justify"><%= @news.content %></div>
    </div>
  </div>
<br>

<%= link_to 'Edit', edit_news_path(@news), :class => "btn btn-primary" %>
<%= link_to 'Back', news_index_path, :class => "btn btn-primary" %>
