<p id="notice"><%= notice %></p>

<h1>Dentists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Dental num</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dentists.each do |dentist| %>
      <tr>
        <td><%= dentist.name %></td>
        <td><%= dentist.email %></td>
        <td><%= dentist.phone %></td>
        <td><%= dentist.dental_num %></td>
        <td><%= dentist.is_active %></td>
        <td><%= link_to 'Show', dentist %></td>
        <td><%= link_to 'Edit', edit_dentist_path(dentist) %></td>
        <td><%= link_to 'Destroy', dentist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

