<p class="desc">
  <%= get_contact_desc %>
</p>

<div class="col-md-6 col-md-offset-3">
  <%= form_with(model: contact, local: true) do |f| %>
    <%= f.label "Name" %>
    <%= f.text_fiels :name, class: 'form-control' %>

    <%= f.label "Phone" %>
    <%= f.text_fiels :phone, class: 'form-control' %>

    <%= f.label "E-Mail" %>
    <%= f.text_fiels :mail, class: 'form-control' %>

    <%= f.label "Message" %>
    <%= f.text_area :content, class: 'form-control' %>

    <%= f.submit "Send message", class: "btn btn-primary" %>
  <% end %>
</div>
