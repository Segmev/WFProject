<h1>Appointments</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Schedule</th>
      <th scope="col">Schedule length minutes</th>
      <th scope="col">Paid</th>
      <th scope="col">Notes</th>
      <th scope="col">Dentist</th>
      <th scope="col">Patient</th>
      <th scope="col" colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.schedule %></td>
        <td><%= appointment.schedule_length_minutes %></td>
        <td><%= appointment.is_paid %></td>
        <td><%= appointment.notes %></td>
        <td><%= appointment.dentist.name %></td>
        <td><%= appointment.patient.name %></td>
        <td><%= link_to 'Show', appointment, :class => 'btn btn-primary'  %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment), :class => 'btn btn-primary'  %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Appointment', new_appointment_path, :class => 'btn btn-primary'  %>
